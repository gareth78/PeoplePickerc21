<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="MailApp">
  <Id>1b6dff06-4b34-4f12-bb17-b6d4548932e8</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Plan International</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="People Picker" />
  <Description DefaultValue="Search, view, and insert presence-aware contact blocks without leaving Outlook." />
  <IconUrl DefaultValue="http://localhost:3000/favicon-32x32.png" />
  <HighResolutionIconUrl DefaultValue="http://localhost:3000/android-chrome-192x192.png" />
  <SupportUrl DefaultValue="https://peoplepicker.example.org/support" />
  <AppDomains>
    <AppDomain>localhost:5173</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="http://localhost:5173/index.html" />
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="http://localhost:5173/index.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" FormType="Read" ItemType="Message" />
    <Rule xsi:type="ItemIs" FormType="Edit" ItemType="Message" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides V="1.1" xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="Commands.Group">
                <Label resid="Commands.GroupLabel" />
                <Control xsi:type="Button" id="Commands.ReadButton">
                  <Label resid="Commands.ButtonLabel" />
                  <Supertip>
                    <Title resid="Commands.ButtonLabel" />
                    <Description resid="Commands.ButtonDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Assets.Icon16" />
                    <bt:Image size="32" resid="Assets.Icon32" />
                    <bt:Image size="80" resid="Assets.Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPane.Url" />
                    <SupportsPinning>true</SupportsPinning>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="Commands.ComposeGroup">
                <Label resid="Commands.GroupLabel" />
                <Control xsi:type="Button" id="Commands.ComposeButton">
                  <Label resid="Commands.ButtonLabel" />
                  <Supertip>
                    <Title resid="Commands.ButtonLabel" />
                    <Description resid="Commands.ButtonDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Assets.Icon16" />
                    <bt:Image size="32" resid="Assets.Icon32" />
                    <bt:Image size="80" resid="Assets.Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPane.Url" />
                    <SupportsPinning>true</SupportsPinning>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Assets.Icon16" DefaultValue="http://localhost:3000/favicon-16x16.png" />
        <bt:Image id="Assets.Icon32" DefaultValue="http://localhost:3000/favicon-32x32.png" />
        <bt:Image id="Assets.Icon80" DefaultValue="http://localhost:3000/android-chrome-192x192.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="http://localhost:5173/index.html" />
        <bt:Url id="TaskPane.Url" DefaultValue="http://localhost:5173/index.html">
          <!-- Production example: https://addin.example.org/index.html -->
        </bt:Url>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="Commands.GroupLabel" DefaultValue="People Picker" />
        <bt:String id="Commands.ButtonLabel" DefaultValue="People Picker" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="Commands.ButtonDescription" DefaultValue="Open the People Picker to search, check presence, and insert contacts." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
