{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowJs": false,
    "noEmit": false,
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@people-picker/sdk": [
        "../../packages/sdk/src"
      ],
      "@people-picker/sdk/*": [
        "../../packages/sdk/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "office-js"
    ]
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
