// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String    @id @default(uuid()) @db.UniqueIdentifier
  email     String    @unique @db.NVarChar(255)
  username  String?   @db.NVarChar(255)
  createdAt DateTime? @map("created_at") @db.DateTime2
  createdBy String?   @map("created_by") @db.UniqueIdentifier

  @@map("admins")
}

model AuditLog {
  id          String   @id @default(uuid()) @db.UniqueIdentifier
  action      String // e.g., "LOGIN", "LOGOUT", "CREATE_ADMIN", "DELETE_ADMIN", "BREAK_GLASS_ACCESS"
  adminEmail  String   @map("admin_email")
  targetEmail String?  @map("target_email") // For actions on other admins
  ipAddress   String?  @map("ip_address")
  userAgent   String?  @map("user_agent")
  metadata    String? // Additional context about the action (stored as JSON string)
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([adminEmail])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
